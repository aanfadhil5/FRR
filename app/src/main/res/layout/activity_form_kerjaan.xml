<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormInputKerjaan"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:src="@drawable/logo"
        />

    <EditText
        android:id="@+id/pelangganEditText"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:hint="Nama Pelanggan"
        android:textColorHint="#656565"
        android:background="#fffdf9"
        android:textColor="#000000"
        android:inputType="textCapWords"
         />
    <EditText
        android:id="@+id/nopolEditText"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:hint="No. Polisi Kendaraan"
        android:textColorHint="#656565"
        android:background="#fffdf9"
        android:inputType="textCapCharacters"
        />

    <EditText
        android:id="@+id/merkMEditText"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Motor"
        android:textColorHint="#656565"
        android:background="#fffdf9"
        android:textColor="#000000"
        android:inputType="textCapWords"
        />
    <EditText
        android:id="@+id/infoEditText"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:hint="Catatan"
        android:textColorHint="#656565"
        android:background="#fffdf9"
        android:inputType="textCapSentences"
        />
    <Button
        android:id="@+id/tambahButton"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="TAMBAH DATA"
        android:backgroundTint="#B91B1C"
        android:textColor="#ffac41" />
</LinearLayout>